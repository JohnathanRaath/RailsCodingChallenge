<h1>Your Library</h1>

<br>

<div class="table-responsive">
<table class="table table-secondary table-hover table-striped table-bordered align-middle", style="text-align: center;">
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Date Published</th>
      <th colspan='2'>Further Options</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.book_Title %></td>
        
        <td><%= book.book_Author %></td>

        <td><%= book.ISBN %></td>

        <td><%= book.date_Pub %></td>

        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-outline-primary", style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .95rem; --bs-btn-font-size: .75rem;" %>  <%= button_to 'Delete', book,  method: :delete, data: {confirm: "Are you sure you want to delete this book?"}, class: "btn btn-outline-danger", style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'Add New Book', new_book_path, class: "btn btn-primary" %>


